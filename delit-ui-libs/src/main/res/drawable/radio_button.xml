<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- items are applied in order from top to bottom - first match ends selection -->
    <item android:state_activated="true"
        android:drawable="@drawable/ic_radio_button_checked_24dp" />
    <item android:state_checked="true"
        android:drawable="@drawable/ic_radio_button_checked_24dp" /> <!-- checked -->
    <item android:drawable="@drawable/ic_radio_button_checked_24dp" android:state_checked="false" app:secondaryChecked="true" /> <!-- checked or unchecked but essentially still checked! -->
    <item android:state_checked="false"
        android:drawable="@drawable/ic_radio_button_unchecked_24dp" /> <!-- unchecked -->

</selector>