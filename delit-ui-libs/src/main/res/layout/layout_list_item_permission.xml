<?xml version="1.0" encoding="utf-8"?><!--delit.libs.ui.view.list.Checkable -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <delit.libs.ui.view.button.MaterialCheckboxTriState
        android:id="@+id/permission_status_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:checked="false"
        android:clickable="false"
        android:focusable="false"
        style="?checkboxStyle"/>


    <TextView
        android:id="@+id/permission_text"
        tools:text="some text"
        android:layout_toEndOf="@id/permission_status_icon"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        style="?textAppearanceBody2"/>

</RelativeLayout>