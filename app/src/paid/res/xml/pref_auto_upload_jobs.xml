<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <PreferenceCategory
        android:layout="@android:layout/preference_category"
        android:title="@string/preference_data_upload_automatic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v14.preference.SwitchPreference
            android:defaultValue="@bool/preference_data_upload_automatic_upload_enabled_default"
            android:key="@string/preference_data_upload_automatic_upload_enabled_key"
            android:summary="@string/preference_data_upload_automatic_upload_enable_summary"
            android:title="@string/preference_data_upload_automatic_upload_enable_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <delit.piwigoclient.ui.common.preference.NumberPickerPreference
            app:defValue="@integer/preference_data_upload_automatic_upload_polling_interval_default"
            app:minValue="1"
            app:maxValue="1440"
            android:key="@string/preference_data_upload_automatic_upload_polling_interval_key"
            android:title="@string/preference_data_upload_automatic_upload_polling_interval_title"
            android:summary="@string/preference_data_upload_automatic_upload_polling_interval_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.v14.preference.SwitchPreference
            android:defaultValue="@bool/preference_data_upload_automatic_upload_wireless_only_default"
            android:key="@string/preference_data_upload_automatic_upload_wireless_only_key"
            android:summary="@string/preference_data_upload_automatic_upload_wireless_only_summary"
            android:title="@string/preference_data_upload_automatic_upload_wireless_only_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <delit.piwigoclient.ui.preferences.AutoUploadJobsPreference
            android:title="@string/preference_data_upload_automatic_upload_jobs_title"
            android:key="@string/preference_data_upload_automatic_upload_jobs_key"
            android:summary="@string/preference_data_upload_automatic_upload_jobs_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </PreferenceCategory>
</PreferenceScreen>