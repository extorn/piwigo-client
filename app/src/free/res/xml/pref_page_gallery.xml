<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.preference.PreferenceCategory
        android:layout="@android:layout/preference_category"
        android:title="@string/preference_gallery_category_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <delit.libs.ui.view.preference.NumberPickerPreference
            android:defaultValue="@integer/preference_gallery_recentlyAlteredAgeDays_default"
            app:minValue="0"
            app:maxValue="14"
            app:multiplier="86400000"
            android:key="@string/preference_gallery_recentlyAlteredAgeMillis_key"
            android:title="@string/preference_gallery_recentlyAlteredAgeMillis_title"
            android:summary="@string/preference_gallery_recentlyAlteredAgeMillis_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.preference.SwitchPreference
            android:defaultValue="@bool/preference_gallery_enable_video_playback_default"
            android:key="@string/preference_gallery_enable_video_playback_key"
            android:summary="@string/preference_gallery_enable_video_playback_summary"
            android:title="@string/preference_gallery_enable_video_playback_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.preference.PreferenceCategory>
    <androidx.preference.PreferenceCategory
        android:layout="@android:layout/preference_category"
        android:key="@string/preference_gallery_category_albums_key"
        android:title="@string/preference_gallery_category_albums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:initialExpandedChildrenCount="1">
        <androidx.preference.ListPreference
            android:entries="@array/preference_gallery_item_thumbnail_size_entry_text"
            android:defaultValue="@string/preference_gallery_album_thumbnail_size_default"
            android:entryValues="@array/preference_gallery_item_thumbnail_size_entry_values"
            android:key="@string/preference_gallery_album_thumbnail_size_key"
            android:title="@string/preference_gallery_album_thumbnail_size_title"
            android:summary="@string/preference_gallery_album_thumbnail_size_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <delit.libs.ui.view.preference.IntListPreference
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:defaultValue="@integer/preference_gallery_child_album_sort_order_default"
            android:key="@string/preference_gallery_child_album_sort_order_key"
            android:summary="@string/preference_gallery_child_album_sort_order_summary"
            android:title="@string/preference_gallery_child_album_sort_order_title"
            app:entries="@array/preference_gallery_child_album_sort_order_entry_text"
            app:entryValues="@array/preference_gallery_child_album_sort_order_entry_values" />
        <androidx.preference.SwitchPreference
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/preference_gallery_child_album_sort_order_inverted_default"
            android:key="@string/preference_gallery_child_album_sort_order_inverted_key"
            android:summary="@string/preference_gallery_child_album_sort_order_inverted_summary"
            android:title="@string/preference_gallery_child_album_sort_order_inverted_title" />
        <androidx.preference.SwitchPreference
            android:defaultValue="@bool/preference_gallery_show_album_thumbnail_zoomed_default"
            android:key="@string/preference_gallery_show_album_thumbnail_zoomed_key"
            android:summary="@string/preference_gallery_show_album_thumbnail_zoomed_summary"
            android:title="@string/preference_gallery_show_album_thumbnail_zoomed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <delit.libs.ui.view.preference.NumberPickerPreference
            app:minValue="1"
            app:maxValue="10"
            android:key="@string/preference_gallery_albums_preferredColumnsPortrait_key"
            android:title="@string/preference_gallery_albums_preferredColumnsPortrait_title"
            android:summary="@string/preference_gallery_albums_preferredColumnsPortrait_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <delit.libs.ui.view.preference.NumberPickerPreference
            app:minValue="1"
            app:maxValue="10"
            android:key="@string/preference_gallery_albums_preferredColumnsLandscape_key"
            android:title="@string/preference_gallery_albums_preferredColumnsLandscape_title"
            android:summary="@string/preference_gallery_albums_preferredColumnsLandscape_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.preference.PreferenceCategory>
    <androidx.preference.PreferenceCategory
        android:layout="@android:layout/preference_category"
        android:key="@string/preference_gallery_category_resources_key"
        android:title="@string/preference_gallery_category_resources"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:initialExpandedChildrenCount="1">
        <androidx.preference.ListPreference
            android:entries="@array/preference_gallery_item_thumbnail_size_entry_text"
            android:defaultValue="@string/preference_gallery_item_thumbnail_size_default"
            android:entryValues="@array/preference_gallery_item_thumbnail_size_entry_values"
            android:key="@string/preference_gallery_item_thumbnail_size_key"
            android:title="@string/preference_gallery_item_thumbnail_size_title"
            android:summary="@string/preference_gallery_item_thumbnail_size_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.preference.SwitchPreference
            android:defaultValue="@bool/preference_gallery_show_image_name_default"
            android:key="@string/preference_gallery_show_image_name_key"
            android:summary="@string/preference_gallery_show_image_name_summary"
            android:title="@string/preference_gallery_show_image_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.preference.ListPreference
            android:defaultValue="@string/preference_gallery_child_resource_sort_order_default"
            android:entries="@array/preference_gallery_child_resource_sort_order_entry_text"
            android:entryValues="@array/preference_gallery_child_resource_sort_order_entry_values"
            android:key="@string/preference_gallery_child_resource_sort_order_key"
            android:summary="@string/preference_gallery_child_resource_sort_order_summary"
            android:title="@string/preference_gallery_child_resource_sort_order_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.preference.SwitchPreference
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:defaultValue="@bool/preference_gallery_child_resource_sort_order_inverted_default"
            android:key="@string/preference_gallery_child_resource_sort_order_inverted_key"
            android:summary="@string/preference_gallery_child_resource_sort_order_inverted_summary"
            android:title="@string/preference_gallery_child_resource_sort_order_inverted_title" />
        <delit.libs.ui.view.preference.NumberPickerPreference
            app:minValue="1"
            app:maxValue="50"
            android:key="@string/preference_gallery_images_preferredColumnsPortrait_key"
            android:title="@string/preference_gallery_images_preferredColumnsPortrait_title"
            android:summary="@string/preference_gallery_images_preferredColumnsPortrait_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <delit.libs.ui.view.preference.NumberPickerPreference
            app:minValue="1"
            app:maxValue="50"
            android:key="@string/preference_gallery_images_preferredColumnsLandscape_key"
            android:title="@string/preference_gallery_images_preferredColumnsLandscape_title"
            android:summary="@string/preference_gallery_images_preferredColumnsLandscape_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.preference.PreferenceCategory>
    <androidx.preference.PreferenceCategory
        android:key="@string/preference_gallery_category_server_calls_key"
        android:layout="@android:layout/preference_category"
        android:title="@string/preference_gallery_category_server_calls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:initialExpandedChildrenCount="0">

