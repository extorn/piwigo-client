<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_toast_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/toast_background">

    <ImageView
        android:id="@+id/snackbar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:contentDescription="@string/content_description_icon"
        tools:srcCompat="@drawable/ic_notifications_black_24dp"
        tools:visibility="visible"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/snackbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/primary_text_default_light"
        tools:text="some title"/>

    <TextView
        android:id="@id/snackbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/snackbar_title"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="?textAppearanceBody1"
        android:textColor="@color/primary_text_default_light"
        tools:text="message goes here"/>

    <Button
        android:id="@+id/snackbar_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/snackbar_text"
        android:layout_marginStart="@dimen/my_design_snackbar_extra_spacing_horizontal"
        android:layout_centerHorizontal="true"
        android:minWidth="48dp"
        tools:visibility="visible"
        tools:text="button"
        android:visibility="gone"
        style="?materialButtonStyle"/>

</RelativeLayout>
