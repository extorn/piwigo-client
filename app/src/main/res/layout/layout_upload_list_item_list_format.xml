<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginStart="3dp">

    <ImageView
        android:id="@+id/file_for_upload_img"
        android:layout_width="80dp" android:contentDescription="TODO" 
        android:layout_height="80dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/file_for_upload_heading_txt"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_margin="0dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_alignTop="@id/file_for_upload_img"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/file_for_upload_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Heading"
        android:textAlignment="center"
        android:background="@color/black_overlay"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    <TextView
        android:id="@+id/file_for_upload_txt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:layout_toStartOf="@+id/file_for_upload_delete_button"
        android:layout_toEndOf="@+id/file_for_upload_img"
        tools:text="filename"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    <delit.libs.ui.view.button.CustomImageButton
        android:id="@+id/file_for_upload_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        app:srcCompat="@drawable/ic_delete_black_24px"/>

    <ProgressBar
        android:id="@+id/file_for_upload_progress"
        style="@style/Custom.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/file_for_upload_img"
        android:indeterminate="false"
        android:max="100"
        tools:progress="50"
        tools:secondaryProgress="80"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/file_for_upload_progress_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/file_for_upload_progress"
        android:layout_alignTop="@id/file_for_upload_progress"
        android:layout_alignEnd="@id/file_for_upload_progress"
        android:layout_alignBottom="@id/file_for_upload_progress"
        android:background="@color/transparent"
        android:shadowColor="@color/primary"
        android:text="@string/uploading_progress_bar_message"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/primary_text_default"
        android:visibility="invisible"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="1sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        tools:visibility="visible" />
</RelativeLayout>