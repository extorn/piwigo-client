<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/keystore_filename_label"
        android:textAppearance="@style/Custom.TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="7dp"
        android:text="@string/heading_keystore_filename" />

    <android.support.v7.widget.AppCompatEditText
        android:textAppearance="@style/Custom.TextAppearance.AppCompat.Body1"
        android:id="@+id/keystore_filename_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:inputType="none"
        android:enabled="false"
        android:maxLines="1"
         />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/keystore_alias_label"
        android:textAppearance="@style/Custom.TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="7dp"
        android:text="@string/heading_keystore_alias" />

    <android.support.v7.widget.AppCompatEditText
        android:textAppearance="@style/Custom.TextAppearance.AppCompat.Body1"
        android:id="@+id/keystore_alias_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:inputType="none"
        android:enabled="false"
        android:maxLines="1"
         />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/keystore_password_label"
        android:textAppearance="@style/Custom.TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="7dp"
        android:text="@string/preference_piwigo_server_password_title" />

    <android.support.v7.widget.AppCompatEditText
        android:textAppearance="@style/Custom.TextAppearance.AppCompat.Body1"
        android:id="@+id/keystore_password_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:inputType="textPassword"
        android:maxLines="1"
         />

</LinearLayout>