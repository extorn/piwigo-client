<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:paddingLeft="15px"
    android:paddingRight="15px"
    android:descendantFocusability="blocksDescendants">
    <TextView
        android:id="@+id/x509_cert_identity"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/list_item_delete_button"
        android:layout_alignWithParentIfMissing="true"
        android:text="Identity : A certificate name"/>
    <TextView
        android:id="@+id/x509_cert_verified_by"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/x509_cert_identity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/list_item_delete_button"
        android:layout_alignWithParentIfMissing="true"
        android:text="Verified by : A certificate name"/>
    <TextView
        android:id="@+id/x509_cert_valid_from"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/x509_cert_verified_by"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/list_item_delete_button"
        android:layout_alignWithParentIfMissing="true"
        android:text="Valid From : 12/12/2008"/>
    <TextView
        android:id="@+id/x509_cert_valid_to"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/x509_cert_valid_from"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/list_item_delete_button"
        android:layout_alignWithParentIfMissing="true"
        android:text="Valid To : 12/12/2012"/>
    <delit.piwigoclient.ui.common.CustomImageButton
        android:id="@+id/list_item_delete_button"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:focusable="false"
        app:srcCompat="@drawable/ic_delete_black_24px" />
</RelativeLayout>