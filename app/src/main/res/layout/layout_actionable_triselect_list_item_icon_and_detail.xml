<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-16dp"
        android:layout_toEndOf="@id/list_item_checked"
        android:layout_toStartOf="@+id/list_item_delete_button"
        android:background="@color/colorAlbumItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_item_icon_thumbnail"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="12dp"
            android:layout_centerVertical="true"
            android:contentDescription="icon" android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/list_item_name"
            android:layout_toEndOf="@id/list_item_icon_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            tools:text="File name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/list_item_details"
            android:layout_below="@+id/list_item_name"
            android:layout_toEndOf="@id/list_item_icon_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="0dp"
            android:paddingBottom="5dp"
            tools:text="File details"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </RelativeLayout>

    <delit.libs.ui.view.button.AppCompatCheckboxTriState
        android:id="@+id/list_item_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
                android:checked="false"
        android:clickable="false"
        android:focusable="false" />

    <delit.libs.ui.view.button.CustomImageButton
        android:id="@+id/list_item_delete_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        app:srcCompat="@drawable/ic_delete_black_24px" />

</RelativeLayout>
