<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/action_buttons_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="14dp"
    android:theme="@style/Theme.App.EditPages"
    tools:showIn="@layout/fragment_slideshow_item">

    <Button
        android:id="@+id/slideshow_resource_action_edit_button"
        style="?materialButtonIconStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_mode_edit_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/slideshow_resource_action_save_button"
        style="?materialButtonIconStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_save_black_24dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/slideshow_resource_action_edit_button"
        app:layout_constraintStart_toEndOf="@+id/slideshow_resource_action_edit_button" />

    <Button
        android:id="@+id/slideshow_resource_action_discard_button"
        style="?materialButtonIconStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_undo_black_24dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/slideshow_resource_action_save_button"
        app:layout_constraintStart_toEndOf="@+id/slideshow_resource_action_save_button" />

    <Button
        android:id="@+id/slideshow_resource_action_delete"
        style="?materialButtonIconStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:tooltipText="@string/slideshow_resource_action_delete"
        app:icon="@drawable/ic_delete_black_24px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/slideshow_resource_action_download"
        style="?materialButtonIconStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:tooltipText="@string/slideshow_resource_action_download"
        app:icon="@drawable/ic_file_download_black_24px"
        app:layout_constraintBaseline_toBaselineOf="@+id/slideshow_resource_action_delete"
        app:layout_constraintEnd_toStartOf="@+id/slideshow_resource_action_delete" />

    <Button
        android:id="@+id/slideshow_resource_action_move"
        style="?materialButtonIconStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tooltipText="@string/slideshow_resource_action_move"
        app:icon="@drawable/ic_content_cut_black_24px"
        app:layout_constraintBaseline_toBaselineOf="@+id/slideshow_resource_action_download"
        app:layout_constraintEnd_toStartOf="@+id/slideshow_resource_action_download" />

    <Button
        android:id="@+id/slideshow_resource_action_copy"
        style="?materialButtonIconStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tooltipText="@string/slideshow_resource_action_copy"
        app:icon="@drawable/ic_content_copy_black_24px"
        app:layout_constraintBaseline_toBaselineOf="@+id/slideshow_resource_action_move"
        app:layout_constraintEnd_toStartOf="@+id/slideshow_resource_action_move" />

</androidx.constraintlayout.widget.ConstraintLayout>