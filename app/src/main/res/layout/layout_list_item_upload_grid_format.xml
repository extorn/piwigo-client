<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <delit.libs.ui.view.SquareLinearLayout
        android:id="@+id/thumbnail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/drawable_scrim_heavy"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/file_for_upload_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/ic_file_black_24dp"
            android:contentDescription="TODO"
            android:scaleType="fitCenter" />

    </delit.libs.ui.view.SquareLinearLayout>

    <TextView
        android:id="@+id/file_for_upload_heading_txt"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_margin="0dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_alignTop="@id/thumbnail_container"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/file_for_upload_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Heading"
        android:textAlignment="center"
        android:background="@drawable/drawable_scrim_heavy"
        android:textAppearance="?textAppearanceBody2"/>

    <TextView
        android:id="@+id/file_for_upload_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="5dp"
        android:layout_alignBottom="@+id/thumbnail_container"
        android:background="@drawable/drawable_scrim_heavy"
        tools:text="filename"
        android:textAppearance="?textAppearanceBody2"/>


    <Button
        android:id="@+id/file_for_upload_delete_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/button_delete"
        app:icon="@drawable/ic_delete_black_24px"
        style="?materialButtonIconStyle"/>

    <ProgressBar
        android:id="@+id/file_for_upload_progress"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/file_for_upload_txt"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:indeterminate="false"
        android:max="100"
        tools:progress="50"
        tools:secondaryProgress="80"
        android:background="@drawable/drawable_scrim_heavy"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/file_for_upload_progress_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/file_for_upload_progress"
        android:layout_alignTop="@id/file_for_upload_progress"
        android:layout_alignEnd="@id/file_for_upload_progress"
        android:layout_alignBottom="@id/file_for_upload_progress"
        android:background="@color/transparent"
        android:text="@string/uploading_progress_bar_message"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="?attr/colorOnSecondary"
        android:visibility="invisible"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="1sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        tools:visibility="visible" />
</RelativeLayout>