<?xml version="1.0" encoding="utf-8"?>
<paul.arian.fileselector.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <RadioButton
        android:id="@+id/actionable_list_item_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:checked="false"
        android:clickable="false"
        android:focusable="false"/>
    <TextView
        android:id="@+id/actionable_list_item_text"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/actionable_list_item_checked"
        android:layout_toLeftOf="@+id/actionable_list_item_delete_button"
        android:layout_alignWithParentIfMissing="true"
        android:text="dummy text"/>

    <delit.piwigoclient.ui.common.CustomImageButton
        android:id="@+id/actionable_list_item_delete_button"
        android:layout_alignParentRight="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:focusable="false"
        app:srcCompat="@drawable/ic_delete_black_24px" />
</paul.arian.fileselector.CheckableRelativeLayout>