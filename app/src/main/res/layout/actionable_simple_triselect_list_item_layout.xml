<?xml version="1.0" encoding="utf-8"?>
<delit.piwigoclient.ui.common.list.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <delit.piwigoclient.ui.common.button.AppCompatCheckboxTriState
        android:id="@+id/actionable_list_item_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:checked="false"
        android:clickable="false"
        android:focusable="false"
        android:button="@drawable/always_clear_checkbox"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/actionable_list_item_text"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/actionable_list_item_checked"
        android:layout_toStartOf="@+id/actionable_list_item_delete_button"
        android:layout_alignWithParentIfMissing="true"
        android:text="dummy text"
        android:textAppearance="@style/Custom.TextAppearance.AppCompat.Body2"/>

    <delit.piwigoclient.ui.common.button.CustomImageButton
        android:id="@+id/actionable_list_item_delete_button"
        android:layout_alignParentEnd="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:focusable="false"
        app:srcCompat="@drawable/ic_delete_black_24px" />
</delit.piwigoclient.ui.common.list.CheckableRelativeLayout>