<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:checked="false"
        android:clickable="false"
        android:focusable="false"
        android:button="@drawable/always_clear_checkbox"/>
    <TextView
        android:id="@+id/name"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/checked"
        android:layout_toStartOf="@+id/list_item_delete_button"
        android:layout_alignWithParentIfMissing="true"
        android:text="dummy text"/>
    <TextView
        android:id="@+id/details"
        android:layout_marginStart="5dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_toEndOf="@id/checked"
        android:layout_toStartOf="@+id/list_item_delete_button"
        android:layout_alignWithParentIfMissing="true"
        android:text="lots and lots of  dummy text, lots and lots of  dummy text, lots and lots of  dummy text, lots and lots of  dummy text"/>

    <delit.piwigoclient.ui.common.CustomImageButton
        android:id="@+id/list_item_delete_button"
        android:layout_alignParentEnd="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:focusable="false"
        app:srcCompat="@drawable/ic_delete_black_24px" />
</RelativeLayout>