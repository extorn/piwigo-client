<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/basket"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/basket_image"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="30dp"
        android:background="@drawable/border"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/basket_item_count"
        android:layout_alignRight="@+id/basket_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="15" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/basket_action_indicator"
        android:layout_alignRight="@+id/basket_image"
        android:layout_alignBottom="@+id/basket_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/basket_clear_button"
        android:layout_toRightOf="@+id/basket_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"/>

</RelativeLayout>