<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <delit.piwigoclient.ui.common.SquareLinearLayout
        android:id="@+id/thumbnail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/black_overlay"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/file_for_upload_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="120px"
            android:minWidth="120px"
            android:scaleType="fitCenter" />

    </delit.piwigoclient.ui.common.SquareLinearLayout>

    <TextView
        android:id="@+id/file_for_upload_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignBottom="@+id/thumbnail_container"
        android:background="@color/white"
        android:backgroundTintMode="add"
        android:text="filename"/>

    <ImageButton
        android:id="@+id/file_for_upload_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

    <ProgressBar
        android:id="@+id/file_for_upload_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/file_for_upload_txt"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="50"
        android:visibility="visible" />
</RelativeLayout>