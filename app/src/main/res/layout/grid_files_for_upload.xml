<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <delit.piwigoclient.ui.common.SquareLinearLayout
        android:id="@+id/thumbnail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/black_overlay"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/file_for_upload_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />

    </delit.piwigoclient.ui.common.SquareLinearLayout>

    <TextView
        android:id="@+id/file_for_upload_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignBottom="@+id/thumbnail_container"
        android:background="@color/background_floating"
        android:backgroundTintMode="add"
        android:text="filename"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    <ImageButton
        android:id="@+id/file_for_upload_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/button_delete" />

    <ProgressBar
        android:id="@+id/file_for_upload_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/file_for_upload_txt"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="50"
        android:visibility="visible" />
</RelativeLayout>