<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    android:background="@color/black_overlay">

    <delit.piwigoclient.ui.common.SquareLinearLayout
        android:id="@+id/thumbnail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/black_overlay"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/resource_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="120px"
            android:minWidth="120px"
            android:scaleType="fitCenter" />

    </delit.piwigoclient.ui.common.SquareLinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/newly_altered_marker_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/type_indicator"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignBottom="@id/thumbnail_container"
        android:layout_alignEnd="@id/thumbnail_container"
        android:layout_margin="0.5dp"
        android:alpha="0.9"
        android:visibility="visible"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/always_clear_checkbox"/>

    <TextView
        android:id="@+id/resource_name"
        android:layout_marginTop="-2dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/thumbnail_container"
        android:textAppearance="?attr/textAppearanceListItem" />

</RelativeLayout>
