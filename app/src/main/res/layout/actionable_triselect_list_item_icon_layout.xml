<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/curved_corners_layout_bg_dark">

    <delit.piwigoclient.ui.common.SquareLinearLayout
        android:id="@+id/list_item_icon_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/list_item_icon_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="120dp"
            android:minWidth="120dp"
            android:scaleType="fitCenter" />

    </delit.piwigoclient.ui.common.SquareLinearLayout>

    <delit.piwigoclient.ui.common.AppCompatCheckboxTriState
        android:id="@+id/list_item_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:checked="false"
        android:clickable="false"
        android:focusable="false"
        android:button="@drawable/always_clear_checkbox"/>

    <delit.piwigoclient.ui.common.CustomImageButton
        android:id="@+id/list_item_delete_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        app:srcCompat="@drawable/ic_delete_black_24px" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/list_item_name"
        android:layout_margin="0dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_alignBottom="@id/list_item_icon_container"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="File name"
        android:background="#AAFFFFFF"
        android:textAlignment="center"
        android:textColor="#FF000000"
        android:textSize="16sp"
        android:shadowColor="#FFFFFF"
        android:shadowRadius="1" />

</RelativeLayout>
