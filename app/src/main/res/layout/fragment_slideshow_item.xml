<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:slidingLayer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/slideshow_item_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <ProgressBar
            android:id="@+id/slideshow_image_loadingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:visibility="visible" />

        <delit.piwigoclient.ui.common.button.CustomImageButton
            android:id="@+id/slideshow_resource_action_direct_download"
            app:srcCompat="@drawable/ic_file_download_black_24px"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="visible"/>

        <delit.piwigoclient.ui.common.button.CustomImageButton
            android:id="@+id/slideshow_resource_action_use_for_album_thumbnail"
            android:layout_toEndOf="@id/slideshow_resource_action_direct_download"
            app:srcCompat="@drawable/ic_wallpaper_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/slideshow_resource_item_x_of_y_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="visible"
            tools:text="x/y"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <RatingBar
            android:id="@+id/slideshow_image_average_ratingBar"
            style="@style/Widget.AppCompat.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1" />
            <!--android:layout_alignBottom="@+id/slideshow_image_favorite"-->
            <!--android:layout_toStartOf="@+id/slideshow_image_favorite"-->


        <!-- this is currently unsupported by the Piwigo API 2.9.1 required -->
        <!--<delit.piwigoclient.ui.common.button.AppCompatCheckboxTriState
            android:id="@+id/slideshow_image_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/favorite_checkbox"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16sp"/>-->

    </RelativeLayout>

    <com.wunderlist.slidinglayer.SlidingLayer
        android:id="@+id/slideshow_image_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        slidingLayer:changeStateOnTap="true"
        slidingLayer:offsetDistance="16dp"
        slidingLayer:shadowDrawable="@drawable/sidebar_shadow"
        slidingLayer:shadowSize="20dp"
        slidingLayer:stickTo="bottom">

        <LinearLayout
            android:id="@+id/slideshow_image_bottom_sheet_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorAlbumBottomSheet"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="14dp">

                <RatingBar
                    android:id="@+id/slideshow_image_ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:stepSize="1" />

                <delit.piwigoclient.ui.common.button.CustomImageButton
                    android:id="@+id/slideshow_resource_action_edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/slideshow_image_ratingBar" />

                <delit.piwigoclient.ui.common.button.CustomImageButton
                    android:id="@+id/slideshow_resource_action_save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/slideshow_resource_action_edit_button"
                    android:layout_below="@+id/slideshow_image_ratingBar"
                    android:layout_toEndOf="@+id/slideshow_resource_action_edit_button" />

                <delit.piwigoclient.ui.common.button.CustomImageButton
                    android:id="@+id/slideshow_resource_action_discard_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/slideshow_resource_action_save_button"
                    android:layout_toEndOf="@+id/slideshow_resource_action_save_button" />

                <delit.piwigoclient.ui.common.button.CustomImageButton
                    android:id="@+id/slideshow_resource_action_move"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/slideshow_resource_action_download"
                    android:layout_toStartOf="@+id/slideshow_resource_action_download" />

                <delit.piwigoclient.ui.common.button.CustomImageButton
                    android:id="@+id/slideshow_resource_action_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/slideshow_resource_action_move"
                    android:layout_toStartOf="@+id/slideshow_resource_action_move"
                    android:text="@string/slideshow_resource_action_copy" />

                <delit.piwigoclient.ui.common.button.CustomImageButton
                    android:id="@+id/slideshow_resource_action_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/slideshow_resource_action_copy"
                    android:layout_toStartOf="@+id/slideshow_resource_action_copy" />

                <delit.piwigoclient.ui.common.button.CustomImageButton
                    android:id="@+id/slideshow_resource_action_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/slideshow_image_ratingBar"
                    android:layout_gravity="end" />


                <LinearLayout
                    android:id="@+id/gallery_details_edit_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/slideshow_resource_action_download"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/slideshow_image_details_name_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@+id/slideshow_image_details_name"
                        android:text="@string/slideshow_image_details_name_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <EditText
                        android:id="@+id/slideshow_image_details_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:inputType="textMultiLine"
                        android:maxLines="3"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <TextView
                        android:id="@+id/slideshow_image_details_description_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@+id/slideshow_image_details_description"
                        android:text="@string/slideshow_image_details_description_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <EditText
                        android:id="@+id/slideshow_image_details_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:maxLines="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <TextView
                        android:id="@+id/slideshow_image_details_linked_albums_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@+id/slideshow_image_details_linked_albums"
                        android:text="@string/slideshow_image_details_linked_albums_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <TextView
                        android:id="@+id/slideshow_image_details_linked_albums"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@string/click_to_view"
                        android:textAppearance="@style/Custom.TextAppearance.AppCompat.Body1.Clickable" />

                    <TextView
                        android:id="@+id/slideshow_image_details_tags_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@+id/slideshow_image_details_tags"
                        android:text="@string/slideshow_image_details_tags_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <TextView
                        android:id="@+id/slideshow_image_details_tags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@string/click_to_view"
                        android:textAppearance="@style/Custom.TextAppearance.AppCompat.Body1.Clickable" />

                    <TextView
                        android:id="@+id/slideshow_image_details_privacy_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:labelFor="@+id/privacy_level"
                        android:text="@string/upload_file_privacy_level_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <Spinner
                        android:id="@+id/privacy_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.Spinner.Underlined"/>

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </com.wunderlist.slidinglayer.SlidingLayer>


</android.support.design.widget.CoordinatorLayout>