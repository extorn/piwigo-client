<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:background="@color/black_overlay">

    <!--<android.support.v7.widget.AppCompatCheckBox-->
        <!--android:id="@+id/checked"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/newly_altered_marker_image"
        android:layout_alignParentRight="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_star_yellow_24dp"/>

    <ImageView
        android:id="@+id/gallery_thumbnail"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_margin="3dp"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/gallery_name"
        android:layout_toRightOf="@+id/gallery_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/gallery_photoCount"
        android:layout_toRightOf="@+id/gallery_thumbnail"
        android:layout_below="@id/gallery_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/gallery_subCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gallery_photoCount"
        android:layout_toRightOf="@+id/gallery_thumbnail"
        android:textAppearance="?attr/textAppearanceListItem" />

    <!--<TextView
        android:layout_below="@+id/gallery_thumbnail"
        android:id="@+id/gallery_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem" />-->
</RelativeLayout>
