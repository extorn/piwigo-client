<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="blocksDescendants">

    <delit.piwigoclient.ui.common.button.AppCompatCheckboxTriState
        android:id="@+id/checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:checked="false"
        android:clickable="false"
        android:focusable="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/checked"
        android:layout_toStartOf="@+id/list_item_delete_button"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="@color/colorAlbumItemBackground">

        <TextView
            android:id="@+id/name"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="dummy text"
            android:textAppearance="@style/Custom.TextAppearance.AppCompat.Body2"/>
        <TextView
            android:id="@+id/details"
            android:layout_marginTop="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            tools:text="lots and lots of  dummy text, lots and lots of  dummy text, lots and lots of  dummy text, lots and lots of  dummy text"
            android:textAppearance="@style/Custom.TextAppearance.AppCompat.Body1"/>

    </LinearLayout>

    <delit.piwigoclient.ui.common.button.CustomImageButton
        android:id="@+id/list_item_delete_button"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:focusable="false"
        app:srcCompat="@drawable/ic_delete_black_24px" />
</RelativeLayout>