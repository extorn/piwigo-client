<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginStart="3dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/file_for_upload_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/file_for_upload_txt"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:layout_toStartOf="@+id/file_for_upload_delete_button"
        android:layout_toEndOf="@+id/file_for_upload_img"
        android:text="filename"/>

    <ImageButton
        android:id="@+id/file_for_upload_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical" />

    <ProgressBar
        android:id="@+id/file_for_upload_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/file_for_upload_img"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:visibility="invisible" />
</RelativeLayout>