<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/keystore_filename_label"
        android:labelFor="@id/keystore_filename_editText"
        android:text="@string/heading_keystore_filename"
        style="?editableFieldLabel"/>

    <TextView
        android:textAppearance="?textAppearanceBody1"
        android:id="@+id/keystore_filename_editText"
        android:layout_below="@+id/keystore_filename_label"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:inputType="none"
        android:enabled="false"
        android:maxLines="1"
        style="?editableFieldText"/>

    <TextView
        android:id="@+id/keystore_password_label"
        android:labelFor="@id/keystore_password_editText"
        android:layout_below="@+id/keystore_filename_editText"
        android:text="@string/preference_piwigo_server_password_title"
        style="?editableFieldLabel"/>

    <CheckBox
        android:id="@+id/toggle_visibility"
        android:layout_alignBaseline="@+id/keystore_password_editText"
        android:layout_alignParentEnd="true"
        style="?visibilityToggleStyle"/>

    <EditText
        android:textAppearance="?textAppearanceBody1"
        android:id="@+id/keystore_password_editText"
        android:layout_below="@+id/keystore_password_label"
        android:layout_toStartOf="@+id/toggle_visibility"
        android:inputType="textPassword"
        android:maxLines="1"
        style="?editableFieldText"/>

</RelativeLayout>