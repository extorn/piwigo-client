<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <delit.piwigoclient.ui.common.SlidingTabLayout
        android:id="@+id/sliding_views_tab_headings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:viewPager="@+id/sliding_views_tab_content"
        tools:initialTabIdx="0" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/sliding_views_tab_content"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@+id/upload_files_controls"
        android:layout_width="match_parent"
        android:layout_below="@id/sliding_views_tab_headings"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_tab_title_files" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="2dp"
            android:paddingTop="15dp"
            android:paddingEnd="2dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:id="@+id/files_for_upload_labels_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/select_files_for_upload_button"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/files_for_upload_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="0dp"
                    android:gravity="top"
                    android:labelFor="@id/selected_files_for_upload"
                    android:paddingStart="5dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/files_for_upload_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                <TextView
                    android:id="@+id/files_uploadable_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    tools:text="(jpg,mpg,avi)" />
            </LinearLayout>

            <delit.piwigoclient.ui.common.button.CustomImageButton
                android:id="@+id/select_files_for_upload_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_add_circle_black_24px" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selected_files_for_upload"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/files_for_upload_labels_layout"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_tab_title_settings" />

        <ScrollView
            android:id="@+id/upload_settings_scollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/upload_username_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:labelFor="@id/upload_username"
                    android:padding="5dp"
                    android:text="@string/upload_username_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                <TextView
                    android:id="@+id/upload_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="9dp"
                    android:padding="5dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:text="username" />

                <TextView
                    android:id="@+id/upload_to_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:labelFor="@id/selected_gallery"
                    android:padding="5dp"
                    android:text="@string/gallery_to_alter_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                <TextView
                    android:id="@+id/selected_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="9dp"
                    android:padding="5dp"
                    android:textAppearance="@style/Custom.TextAppearance.AppCompat.Body1.Clickable"
                    tools:text="some album" />

                <TextView
                    android:id="@+id/privacy_level_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:labelFor="@id/privacy_level"
                    android:padding="5dp"
                    android:text="@string/upload_file_privacy_level_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                <Spinner
                    android:id="@+id/privacy_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="9dp" />

                <CheckBox
                    android:id="@+id/compress_images_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="9dp"
                    android:enabled="false"
                    android:text="@string/compress_images" />

                <LinearLayout
                    android:id="@+id/image_compression_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/compress_images_output_format_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:labelFor="@id/compress_images_output_format"
                        android:padding="5dp"
                        android:text="@string/preference_data_upload_compress_images_output_format_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <Spinner
                        android:id="@+id/compress_images_output_format"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="9dp"
                        android:duplicateParentState="true"
                        android:entries="@array/preference_data_upload_compress_images_output_format_items" />

                    <TextView
                        android:id="@+id/compress_images_quality_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:labelFor="@id/compress_images_quality"
                        android:padding="5dp"
                        android:text="@string/preference_data_upload_compress_images_quality_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <Spinner
                        android:id="@+id/compress_images_quality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="9dp"
                        android:duplicateParentState="true" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/compress_videos_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="9dp"
                    android:enabled="false"
                    android:text="@string/compress_videos" />

                <LinearLayout
                    android:id="@+id/video_compression_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <TextView
                        android:id="@+id/compress_videos_quality_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:labelFor="@id/compress_videos_quality"
                        android:padding="5dp"
                        android:text="@string/preference_data_upload_compress_videos_quality_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <Spinner
                        android:id="@+id/compress_videos_quality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="9dp"
                        android:duplicateParentState="true" />

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </androidx.viewpager.widget.ViewPager>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upload_files_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/upload_adView"
        android:layout_alignWithParentIfMissing="true">
        <Button
            android:id="@+id/view_detailed_upload_status_button"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/delete_upload_job_button"
            android:text="@string/upload_job_status_button"/>
        <Button
            android:id="@+id/delete_upload_job_button"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/delete_upload_job_button_title"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/upload_files_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:enabled="false"
            android:text="@string/upload_files_button_title"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/upload_adView"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/ad_id_uploads_banner">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
