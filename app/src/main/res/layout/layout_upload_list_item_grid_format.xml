<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <delit.piwigoclient.ui.common.SquareLinearLayout
        android:id="@+id/thumbnail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/black_overlay"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/file_for_upload_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="TODO" android:scaleType="fitCenter" />

    </delit.piwigoclient.ui.common.SquareLinearLayout>

    <TextView
        android:id="@+id/file_for_upload_heading_txt"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_margin="0dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_alignTop="@id/thumbnail_container"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/file_for_upload_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Heading"
        android:textAlignment="center"
        android:background="@color/black_overlay"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    <TextView
        android:id="@+id/file_for_upload_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="5dp"
        android:layout_alignBottom="@+id/thumbnail_container"
        android:background="@color/black_overlay"
        tools:text="filename"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    <delit.piwigoclient.ui.common.button.CustomImageButton
        android:id="@+id/file_for_upload_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/button_delete"
        app:srcCompat="@drawable/ic_delete_black_24px"/>

    <ProgressBar
        android:id="@+id/file_for_upload_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/file_for_upload_txt"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="50"
        android:visibility="visible" />
</RelativeLayout>