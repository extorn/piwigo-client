<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Material theme (dark version).
        <p>If you want to ensure that your
        app consistently uses the Material theme at all times, you must explicitly declare it in your
        manifest. For example, {@code &lt;application android:theme="@style/Theme.Material"&gt;}.
        <p>Styles used by the Material theme are named using the convention Type.Material.Etc
        (for example, {@code Widget.Material.Button} and {@code
        TextAppearance.Material.Widget.PopupMenu.Large}).
        Specific resources used by Material are named using the convention @type/foo_bar_baz_material
        with trailing _dark or _light specifiers if they are not shared between both light and
        dark versions of the theme. -->

    <style name="Custom.Theme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/foreground</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/primary</item>

        <!-- used for the navigation menu for example -->
        <item name="clickableTextViewStyleBody1">@style/Custom.Widget.MaterialComponents.TextView.Clickable.Body1</item>
        <item name="clickableTextViewStyleBody1Field">@style/Custom.Widget.MaterialComponents.TextView.Clickable.Body1.Field</item>
        <item name="clickableTextViewStyleBody2">@style/Custom.Widget.MaterialComponents.TextView.Clickable.Body2</item>
        <item name="clickableTextViewStyleTitle">@style/Custom.Widget.MaterialComponents.TextView.Clickable.Title</item>
        <item name="android:textAppearanceMedium">@style/Custom.TextAppearance.AppCompat.Medium</item>
        <item name="ratingBarStyleIndicator">@style/Widget.AppCompat.RatingBar.Indicator</item>
        <item name="ratingBarStyleSmall">@style/Widget.AppCompat.RatingBar.Small</item>
        <item name="textAppearanceBody2">@style/Custom.TextAppearance.AppCompat.Body2</item>
        <item name="textAppearanceBody1">@style/Custom.TextAppearance.AppCompat.Body1</item>
        <item name="android:progressBarStyleHorizontal">@style/Custom.Widget.AppCompat.ProgressBar.Horizontal</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogMaterialTheme</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:dialogTheme">@style/AlertDialogTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <!--<item name="dialogTheme">@style/AlertDialogMaterialTheme</item>-->
        <item name="materialButtonStyle">@style/Custom.Widget.MaterialComponents.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Custom.Widget.MaterialComponents.Button.OutlinedButton</item>

        <!-- used for the navigation menu for example -->
        <item name="android:checkboxStyle">@style/Custom.Widget.AppCompat.CompoundButton.CheckBox</item>
        <item name="checkboxStyle">@style/Custom.Widget.AppCompat.CompoundButton.CheckBox</item>
        <item name="radioButtonStyle">@style/Custom.Widget.AppCompat.CompoundButton.RadioButton</item>
        <item name="switchStyle">@style/Custom.Widget.AppCompat.CompoundButton.Switch</item>
        <item name="android:editTextColor">@color/edit_text_color_selector</item>
        <item name="android:textAppearance">@style/Custom.TextAppearance.AppCompat</item>
        <item name="android:spinnerStyle">@style/Custom.Widget.AppCompat.Spinner.Underlined</item>
        <item name="android:spinnerItemStyle">@style/Custom.Widget.AppCompat.TextView.SpinnerItem</item>
        <item name="android:dropDownListViewStyle">@style/Custom.Widget.AppCompat.DropDownItem.Spinner</item>
        <item name="preferenceTheme">@style/Custom.PreferenceThemeOverlay.v14.Material</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <style name="AlertDialogMaterialTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>

    </style>
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Custom.Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="Alert.Button.Negative" parent="Custom.Widget.MaterialComponents.Button.OutlinedButton">
    </style>

    <style name="Alert.Button.Neutral" parent="Custom.Widget.MaterialComponents.Button.OutlinedButton">
    </style>


    <style name="Custom.PreferenceThemeOverlay.v14.Material" parent="PreferenceThemeOverlay.v14.Material">
    </style>

    <style name="Custom.TextAppearance.AppCompat" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/edit_text_color_selector</item>
    </style>

    <!-- used on the album view - headings for listed albums -->
    <style name="Custom.TextAppearance.AppCompat.Medium" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/edit_text_color_selector</item>
    </style>

    <style name="Custom.Widget.MaterialComponents.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Custom.Widget.MaterialComponents.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="Custom.TextAppearance.AppCompat.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/edit_text_color_selector</item>
    </style>
    <style name="Custom.TextAppearance.AppCompat.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/edit_text_color_selector</item>
    </style>

    <style name="Custom.TextAppearance.AppCompat.Body1.Clickable" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/clickable_text_color_selector</item>
    </style>

    <style name="Custom.TextAppearance.AppCompat.Body2.Clickable" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/clickable_text_color_selector</item>
    </style>

    <style name="Custom.TextAppearance.AppCompat.Title.Clickable" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/clickable_text_color_selector</item>
    </style>

    <style name="Custom.TextAppearance.AppCompat.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <!-- this is used for items that are clickable but invisibly so -->
    </style>

    <style name="Custom.TextAppearance.AppCompat.Headline.Clickable" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/clickable_text_color_selector</item>
    </style>


    <style name="Custom.Widget.AppCompat.CompoundButton.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">@color/edit_text_color_selector</item>
        <item name="buttonTint">@color/checkbox_color_tint</item>
    </style>
    <style name="Custom.CheckBox.TextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
    </style>
    <style name="Custom.Widget.AppCompat.CompoundButton.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">@color/edit_text_color_selector</item>
        <item name="buttonTint">@color/checkbox_color_tint</item>
    </style>
    <style name="Custom.Widget.AppCompat.CompoundButton.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:textColor">@color/edit_text_color_selector</item>
        <item name="buttonTint">@color/checkbox_color_tint</item>
    </style>

    <style name="Custom.Widget.MaterialComponents.TextView.Clickable.Body1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/Custom.TextAppearance.AppCompat.Body1.Clickable</item>
    </style>

    <style name="Custom.Widget.MaterialComponents.TextView.Clickable.Body1.Field">
        <item name="android:background">?attr/editTextBackground</item>
    </style>

    <style name="Custom.Widget.MaterialComponents.TextView.Clickable.Body2" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/Custom.TextAppearance.AppCompat.Body2.Clickable</item>
    </style>

    <style name="Custom.Widget.MaterialComponents.TextView.Clickable.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/Custom.TextAppearance.AppCompat.Title.Clickable</item>
    </style>

    <style name="Custom.Widget.MaterialComponents.TextView.Clickable.Body2.Field">
        <item name="android:background">?attr/editTextBackground</item>
    </style>

    <style name="Custom.Widget.AppCompat.Spinner.Underlined" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:spinnerItemStyle">@style/Custom.Widget.AppCompat.TextView.SpinnerItem</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <!-- spinner / drop down lists - what is displayed when not expanded -->
    <style name="Custom.Widget.AppCompat.TextView.SpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/edit_text_color_selector</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <!-- items in the dropdown 'popup' when a spinner is clicked on -->
    <style name="Custom.Widget.AppCompat.DropDownItem.Spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@color/background_floating</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:spinnerItemStyle">@style/Custom.Widget.AppCompat.TextView.SpinnerItem</item>
    </style>

    <style name="Custom.Widget.AppCompat.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">9dp</item>
        <item name="android:maxHeight">9dp</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_two_stage</item>
    </style>

</resources>
