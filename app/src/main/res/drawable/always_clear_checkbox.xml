<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_activated="true" android:state_enabled="true"
        android:drawable="@drawable/ic_check_box_accent_24dp" />
    <item android:state_checked="true" android:state_enabled="true"
        android:drawable="@drawable/ic_check_box_accent_24dp" /> <!-- checked -->
    <item app:state_always_checked="true" android:state_enabled="true"
        android:drawable="@drawable/ic_check_box_accent_24dp" />

    <item android:state_checked="false" android:state_enabled="true"
        android:drawable="@drawable/ic_check_box_outline_blank_accent_24dp" /> <!-- unchecked -->

    <item android:state_activated="true" android:state_enabled="false"
        android:drawable="@drawable/ic_check_box_black_24dp" />
    <item android:state_checked="true" android:state_enabled="false"
        android:drawable="@drawable/ic_check_box_black_24dp" /> <!-- checked -->
    <item app:state_always_checked="true" android:state_enabled="false"
        android:drawable="@drawable/ic_check_box_black_24dp" />

    <item android:state_checked="false" android:state_enabled="false"
        android:drawable="@drawable/ic_check_box_outline_blank_black_24dp" /> <!-- unchecked -->
</selector>