<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- items are applied in order from top to bottom - first match ends selection -->
    <item android:state_activated="true"
        android:drawable="@drawable/ic_check_box_checked_24dp" />
    <item android:state_checked="true" app:state_always_checked="false"
        android:drawable="@drawable/ic_check_box_checked_24dp" /> <!-- checked -->
    <item android:state_checked="true" app:state_always_checked="true"
        android:drawable="@drawable/ic_check_box_checked_24dp" /> <!-- checked -->
    <item android:state_checked="false" app:state_always_checked="false"
        android:drawable="@drawable/ic_check_box_unchecked_24dp" /> <!-- checked -->
    <item android:state_checked="false" app:state_always_checked="true"
        android:alpha="0.8" android:drawable="@drawable/ic_check_box_checked_24dp" /> <!-- checked -->
</selector>