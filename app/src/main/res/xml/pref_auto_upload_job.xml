    <PreferenceCategory
        android:layout="@android:layout/preference_category"
        android:title="@string/preference_data_upload_automatic_job_title">

        <SwitchPreference
            android:defaultValue="@bool/preference_data_upload_automatic_enabled_default"
            android:key="@string/preference_data_upload_automatic_enabled_key"
            android:summary="@string/preference_data_upload_automatic_enabled_summary"
            android:title="@string/preference_data_upload_automatic_enabled_title" />

        <delit.piwigoclient.ui.preferences.ServerConnectionsListPreference
            android:title="@string/preference_data_upload_automatic_server_title"
            android:key="@string/preference_data_upload_automatic_server_key"
            android:summary="@string/preference_data_upload_automatic_server_summary"
            android:dependency="@string/preference_data_upload_automatic_enabled_key"/>

        <delit.piwigoclient.ui.preferences.ServerAlbumListPreference
            app:connectionProfileNameKey="@string/preference_data_upload_automatic_server_key"
            android:title="@string/preference_data_upload_automatic_server_album_title"
            android:key="@string/preference_data_upload_automatic_server_album_key"
            android:summary="@string/preference_data_upload_automatic_server_album_summary"
            android:dependency="@string/preference_data_upload_automatic_enabled_key"/>

        <delit.piwigoclient.ui.common.preference.LocalFoldersListPreference
            android:title="@string/preference_data_upload_automatic_local_folder_title"
            android:key="@string/preference_data_upload_automatic_local_folder_key"
            android:summary="@string/preference_data_upload_automatic_local_folder_summary"
            android:dependency="@string/preference_data_upload_automatic_enabled_key"/>

        <SwitchPreference
            android:defaultValue="@bool/preference_data_upload_automatic_server_delete_uploaded_default"
            android:key="@string/preference_data_upload_automatic_server_delete_uploaded_key"
            android:summary="@string/preference_data_upload_automatic_server_delete_uploaded_summary"
            android:title="@string/preference_data_upload_automatic_server_delete_uploaded_title"
            android:dependency="@string/preference_data_upload_automatic_enabled_key"/>

        <delit.piwigoclient.ui.common.preference.EditTextPreference
            android:capitalize="none"
            android:inputType="none"
            android:key="@string/preference_data_upload_automatic_server_file_exts_uploaded_key"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:defaultValue="@string/preference_data_upload_automatic_server_file_exts_uploaded_default"
            android:title="@string/preference_data_upload_automatic_server_file_exts_uploaded_title"
            android:summary="@string/preference_data_upload_automatic_server_file_exts_uploaded_summary"
            android:dependency="@string/preference_data_upload_automatic_enabled_key"/>

        <delit.piwigoclient.ui.common.preference.NumberPickerPreference
            app:defValue="@integer/preference_data_upload_automatic_max_upload_size_mb_default"
            app:minValue="0"
            app:maxValue="150"
            android:key="@string/preference_data_upload_automatic_max_upload_size_mb_key"
            android:title="@string/preference_data_upload_automatic_max_upload_size_mb_title"
            android:summary="@string/preference_data_upload_automatic_max_upload_size_mb_summary"
            android:dependency="@string/preference_data_upload_automatic_enabled_key"/>
    </PreferenceCategory>
</PreferenceScreen>